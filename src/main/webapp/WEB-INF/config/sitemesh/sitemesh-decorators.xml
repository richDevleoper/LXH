<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/">

	<!-- excludes -->
	<excludes>
		<pattern>*.ajax*</pattern>
		<pattern>*.json*</pattern>
		<pattern>*download.do</pattern>
		<pattern>*Download.do</pattern>
		<pattern>/dwr/*</pattern>
		<pattern>/jfile/*</pattern>
		<pattern>*/attachfile/*</pattern>
	</excludes>


	<!-- common -->
	<decorator name="common" page="/WEB-INF/jsp/layout/common/Site.jsp">
		<pattern>/common/*</pattern>
	</decorator>	

	<!-- csl -->
	<decorator name="csl" page="/WEB-INF/jsp/layout/csl/Sub.jsp">
		<pattern>/csl/*</pattern>
	</decorator>
	<decorator name="cslIndex" page="/WEB-INF/jsp/layout/csl/Index.jsp">
		<pattern>/csl/index.do</pattern>
	</decorator>
	<decorator name="cslPrint" page="/WEB-INF/jsp/layout/csl/Print.jsp">
		<pattern>/csl/print/*</pattern>
	</decorator>
	<decorator name="cslEmpty" page="/WEB-INF/jsp/layout/csl/Empty.jsp">
		<pattern>/csl/common/*</pattern>
		<pattern>/csl/user/mngr/login*</pattern>
		<pattern>/csl/file/*</pattern>
		<pattern>/csl/editor/*</pattern>
		<pattern>/csl/error/*</pattern>
	</decorator>


	<!-- def -->
	<decorator name="def" page="/WEB-INF/jsp/layout/def/Sub.jsp">
		<pattern>/app/*</pattern> 
		<pattern>/article/*</pattern> 
		<pattern>/content/view.do</pattern> 
		<pattern>/user/*</pattern> 
		<pattern>/menu/siteMap.do</pattern> 
		<pattern>/script/*</pattern> 
	</decorator>
	<decorator name="defIndex" page="/WEB-INF/jsp/layout/def/Index.jsp">
		<pattern>/index.do</pattern>
	</decorator>
	<decorator name="defSearch" page="/WEB-INF/jsp/layout/def/Search.jsp">
		<pattern>/search/*</pattern> 
	</decorator>
	<decorator name="defEmpty" page="/WEB-INF/jsp/layout/def/Empty.jsp">
		<pattern>/file/*</pattern>
		<pattern>/editor/*</pattern>
		<pattern>/error/*</pattern>
	</decorator>


	<!-- eng -->
	<decorator name="eng" page="/WEB-INF/jsp/layout/eng/Sub.jsp">
		<pattern>/eng/*</pattern>
	</decorator>
	<decorator name="engIndex" page="/WEB-INF/jsp/layout/eng/Index.jsp">
		<pattern>/eng/index.do</pattern>
	</decorator>
	<decorator name="engEmpty" page="/WEB-INF/jsp/layout/eng/Empty.jsp">
		<pattern>/eng/file/*</pattern>
		<pattern>/eng/editor/*</pattern>
		<pattern>/eng/error/*</pattern>
	</decorator>


	<!-- mobile -->
	<decorator name="mobile" page="/WEB-INF/jsp/layout/mobile/Site.jsp">
		<pattern>/mobile/*</pattern>
	</decorator>
	<decorator name="mobileIndex" page="/WEB-INF/jsp/layout/mobile/Index.jsp">
		<pattern>/mobile/index.do</pattern>
	</decorator>


</decorators>